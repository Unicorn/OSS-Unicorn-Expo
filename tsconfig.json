{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "ESNext",
    "target": "ES5",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-native"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
